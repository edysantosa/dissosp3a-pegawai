{% extends "partials/frame.twig" %}

{% block navbar %}
{% endblock navbar %}
{% block sidebar %}
{% endblock sidebar %}
{% block page_header %}
{% endblock page_header %}

{% block site_content %}
    <!-- Content area -->
    <div class="content d-flex justify-content-center align-items-center">

        <!-- Login form -->
        <form class="reset-form" action="">
            <fieldset>
                <div class="card mb-0">
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <i class="icon-spinner11 icon-2x text-warning border-warning border-3 rounded-round p-3 mb-3 mt-1"></i>
                            <h5 class="mb-0">Lupa Password</h5>
                            <span class="d-block text-muted">Kami akan mengirimkan anda password baru melalui email</span>
                        </div>

                        <div class="form-group form-group-feedback form-group-feedback-right">
                            <input type="email" name="email" class="form-control" placeholder="Your email" required>
                            <div class="form-control-feedback">
                                <i class="icon-mail5 text-muted"></i>
                            </div>
                        </div>

                        <button type="submit" class="btn bg-blue btn-block"><i class="icon-spinner11 mr-2"></i> Reset password</button>
                    </div>
                </div>
            </fieldset>
        </form>
        <!-- /login form -->

    </div>
    <!-- /content area -->
{% endblock site_content %}
